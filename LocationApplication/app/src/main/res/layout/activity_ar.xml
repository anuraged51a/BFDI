<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ArActivity"
        android:id="@+id/constraint_layout_ar">
    <fragment
            android:id="@+id/sceneform_fragment"
            android:name="com.google.ar.sceneform.ux.ArFragment"
            android:layout_width="match_parent"
            android:layout_height="100dp" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="48dp"/>
    <ImageView
            android:id="@+id/image_map"
            android:layout_height="600dp"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/text_trans"
            app:layout_constraintTop_toBottomOf="@+id/sceneform_fragment"
            android:src="@drawable/map" tools:layout_editor_absoluteX="0dp" app:layout_constraintVertical_bias="0.485"/>
    <TextView
            android:id="@+id/text_trans"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            tools:layout_editor_absoluteX="60dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"/>
    <Button
            android:text=""
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/currentLocationbutton"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="500dp" android:layout_marginStart="110dp"
            app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>
